<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/filterIV"
        android:layout_width="@dimen/filter_select_size"
        android:layout_height="@dimen/filter_select_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="6dp"
        app:riv_border_width="1dp"
        app:riv_border_color="@color/cl_next_step"
        app:riv_mutate_background="true"
        app:riv_oval="false"
        />

    <TextView
        android:id="@+id/filterNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/cl_ffffff"
        app:layout_constraintStart_toStartOf="@id/filterIV"
        app:layout_constraintEnd_toEndOf="@id/filterIV"
        app:layout_constraintTop_toBottomOf="@id/filterIV"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>