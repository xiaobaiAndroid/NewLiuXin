<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".entrance.PublishEntranceActivity">

    <TextView
        android:id="@+id/titleTV"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/cl_000000"
        android:textSize="@dimen/sp_18"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:text="@string/live_upload_statement"
        />

    <ImageView
        android:id="@+id/statementIV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleTV"
        android:src="@drawable/live_ic_statement"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/protocolLeftTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statementIV"
        android:layout_marginTop="@dimen/dp_10"
        style="@style/tv_14_313131"
        android:layout_marginStart="@dimen/dp_12"
        android:text="@string/live_protocol_left"
        />

    <TextView
        android:id="@+id/protocolTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/protocolLeftTV"
        app:layout_constraintBaseline_toBaselineOf="@id/protocolLeftTV"
        android:textColor="@color/cl_13b5b1"
        android:textSize="@dimen/sp_14"
        android:text="@string/live_user_live_clause"
        />

    <TextView
        android:id="@+id/publishVideoTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/tv_14_313131"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_80"
        app:layout_constraintBottom_toTopOf="@id/closeIV"
        android:text="@string/live_video"
        android:clickable="true"
        android:gravity="center"
        android:drawablePadding="@dimen/dp_6"
        android:layout_marginBottom="@dimen/dp_40"
        app:drawableTopCompat="@drawable/live_ic_video" />

    <TextView
        android:id="@+id/publishImgTxtTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/tv_14_313131"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/closeIV"
        android:text="@string/live_imgtxt"
        android:layout_marginStart="@dimen/dp_80"
        android:gravity="center"
        android:drawablePadding="@dimen/dp_6"
        android:layout_marginBottom="@dimen/dp_40"
        app:drawableTopCompat="@drawable/live_ic_picture" />

    <ImageView
        android:id="@+id/closeIV"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_40"
        app:srcCompat="@drawable/clique_ic_close"
         />

</androidx.constraintlayout.widget.ConstraintLayout>
