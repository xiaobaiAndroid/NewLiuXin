<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/cl_ffffff"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/inputET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_12"
        android:background="@drawable/comment_bg_input"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_12"
        android:paddingTop="@dimen/dp_6"
        android:paddingBottom="@dimen/dp_6"
        android:paddingRight="@dimen/dp_12"
        android:inputType="textMultiLine"
        android:maxHeight="@dimen/dp_60"
        android:minHeight="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_12"
        android:maxLength="200"
        android:hint="@string/comment_hint_say"
        style="@style/tv_14_313131"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_12"
        app:layout_constraintRight_toLeftOf="@id/sendTV"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="@dimen/dp_12"
        />

    <TextView
        android:id="@+id/sendTV"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_12"
        android:gravity="center"
        android:textColor="@color/cl_ffffff"
        android:textSize="@dimen/sp_14"
        android:background="@drawable/comment_bg_comment"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_12"
        android:text="@string/comment_comment"
        />

</androidx.constraintlayout.widget.ConstraintLayout>