<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/share_cl_ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleTV"
        style="@style/share_tv_15_313131"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/share_share_to"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line1V"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="12dp"
        android:background="@color/share_cl_eeeeee"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleTV" />

    <TextView
        android:id="@+id/chatTV"
        style="@style/share_tv_14_313131"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/share_dp_12"
        android:layout_marginTop="@dimen/share_dp_30"
        android:layout_marginBottom="@dimen/share_dp_30"
        android:text="@string/share_chat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:gravity="center_horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/friendTV"
        app:layout_constraintTop_toBottomOf="@id/line1V"
        app:drawableTopCompat="@drawable/share_ic_chat" />

    <TextView
        android:id="@+id/friendTV"
        style="@style/share_tv_14_313131"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/share_friend"
        app:layout_constraintHorizontal_weight="1"
        android:gravity="center_horizontal"
        app:layout_constraintLeft_toRightOf="@id/chatTV"
        app:layout_constraintRight_toLeftOf="@id/otherV"
        app:layout_constraintBottom_toBottomOf="@id/chatTV"
        app:drawableTopCompat="@drawable/share_ic_friend" />

    <View
        android:id="@+id/otherV"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/share_dp_12"
        android:layout_marginRight="@dimen/share_dp_12"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toRightOf="@id/friendTV"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1V" />

</androidx.constraintlayout.widget.ConstraintLayout>