<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/categorySTL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_8"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicatorColor="@color/cl_13b5b1"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorHeight="@dimen/dp_1"
        app:tabMaxWidth="@dimen/dp_120"
        app:tabMinWidth="@dimen/dp_60"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/cl_13b5b1"
        app:tabTextColor="@color/cl_313131"
        app:tabRippleColor="@null"
        />



    <View
        android:id="@+id/underLineV"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:background="@color/cl_eeeeee"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categorySTL" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/categoryVP"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/underLineV" />

</androidx.constraintlayout.widget.ConstraintLayout>