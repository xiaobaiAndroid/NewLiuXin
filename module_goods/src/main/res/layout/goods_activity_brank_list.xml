<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search.brank.BrandListActivity">

    <module.common.view.ActionBarView
        android:id="@+id/actionBarView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/smartRefreshLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/actionBarView"
        app:layout_constraintBottom_toTopOf="@id/clearTV"
        android:layout_marginBottom="@dimen/dp_12"
        app:srlEnableAutoLoadMore="false"
        app:srlEnableOverScrollBounce="false"
        app:srlEnableOverScrollDrag="false"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contentRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            />

    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

    <TextView
        android:id="@+id/clearTV"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_36"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/confirmTV"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:clickable="true"
        style="@style/tv_14_313131"
        app:layout_constraintHorizontal_weight="1"
        android:background="@drawable/goods_bg_clear_brand"
        android:text="@string/goods_clear_brand"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/confirmTV"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_36"
       app:layout_constraintLeft_toRightOf="@id/clearTV"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:clickable="true"
        style="@style/tv_14_ffffff"
        app:layout_constraintHorizontal_weight="2"
        android:background="@drawable/goods_bg_brand_confirm"
        android:text="@string/goods_confirm"
        android:layout_marginRight="@dimen/dp_12"
        android:gravity="center"
        />

</androidx.constraintlayout.widget.ConstraintLayout>