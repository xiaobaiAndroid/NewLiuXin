<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/statusIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/goods_ic_filtrate_normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/dp_12"
        />

    <TextView
        android:id="@+id/brandNameTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/statusIV"
        android:layout_marginLeft="@dimen/dp_12"
        style="@style/tv_14_313131"
        android:maxLines="1"
        android:text="12342"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="@id/statusIV"
        app:layout_constraintBottom_toBottomOf="@id/statusIV"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_6"
        />

</androidx.constraintlayout.widget.ConstraintLayout>