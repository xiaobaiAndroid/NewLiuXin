<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemRootCL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gift_bg_gift_selected"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/giftIV"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_12"
        />

    <TextView
        android:id="@+id/giftNameTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/tv_12_313131"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/giftIV"
        android:layout_marginTop="@dimen/dp_6"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        />

    <TextView
        android:id="@+id/priceTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/giftNameTV"
        android:textColor="@color/cl_707070"
        android:textSize="@dimen/sp_10"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/dp_2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_6"
        />

</androidx.constraintlayout.widget.ConstraintLayout>